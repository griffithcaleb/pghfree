




<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../partials/head.ejs %>
  </head>
  <body>
   <header>
    <% include ../partials/header.ejs %>
   </header
   <nav>
       <% include ../partials/nav.ejs %>

   </nav>
   <div class="container">
     <a href="/pghfree/userevents/new"><button type="button" class="btn btn-success" name="button">Add Your Event</button></a>

     <div class="changepage">
       <ul class="pagination">
         <li class="page-item" id = 'previous-page'><a class="page-link" href="#">Previous</a></li>
       </ul>
     </div>



   <div id='eventContainer' class="container">

        <% for (let i = 1; i < events.length; i++) {%>
            <div class="event">

              <div class="userEventPhoto">
                <img src="<%=events[i].eventPhoto%>" alt="">
              </div>
              <div class="userEventContent">
            <a href="/pghfree/userevents/<%=events[i].id%>"><h3><%=events[i].title%></h3></a>

            <h4><%=events[i].date%></h4>
            <h6><%=events[i].time%></h6>

            <h6><%=events[i].location%></h6>



            </div>
          </div>


       <% }%>
       <div class="container changepage">
         <ul class="pagination">
           <li class="page-item" id = 'previous-page'><a class="page-link" href="#">Previous</a></li>
         </ul>
       </div>


    </div>
</div>
  <footer> <% include ../partials/footer.ejs %></footer>
  </body>
</html>
