<!DOCTYPE html>
<html>

<head>
  <% include ../partials/head.ejs %>
</head>

<body>
  <header>
    <% include ../partials/header.ejs %>
  </header>
  <nav>
    <% include ../partials/nav.ejs %>
  </nav>


  <form action="/pghfree/usersevents/<%=event.id%>?_method=PUT" method="POST">
    <div class="container">
        <div class="editEvent">
           <h1>Edit Event Page</h1>

      <form action="/pghfree/userevents/new" method="POST">
        <div class="form-group">
          <label for="title">Event Title or Name:</label>
          <input class="form-control" type="text" name="title" value="<%=event.title%>" />
        </div>
        <div class="form-group">
          <label for="date">Date:<label>
              <input class="form-control" type="date" name="date" value="<%=event.date%>" />
        </div>
        <div class="form-group">
          <label for="time">Time:</label>
          <input class="form-control" type="time" name="time" value="<%=event.time%>" />
        </div>
        <div class="form-group">
          <label for="description">Event Description:</label>
          <textarea class="form-control" type="text" name="description" rows="8" cols="80" value="<%=event.description%>" />
          </textarea>
        </div>
        <div class="form-group">
          <label for="findOutMore">link to event on another site:</label>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon3">https://www.</span>
            </div>
            <input type="text" name='findOutMore' class="form-control" id="basic-url" aria-describedby="basic-addon3">
          </div>
        </div>
        <div class="form-group">
          <label for="eventPhoto">link to image for event:</label>
          <input class="form-control" type="file" accept="image/*" name="eventPhoto" value="<%=event.eventPhoto%>"//> </div> <button class="btn btn-primary" type="submit" name="button">make changes</button>


        </div>
        </div>
      </form>
</body>

